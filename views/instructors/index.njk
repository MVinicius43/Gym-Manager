{% extends 'layout.njk' %}

{% block content %}

    <div class="card table-container">
        <table>
            <thead>
                <tr> <!-- linhas do cabeçalho -->
                    <th>Instructor</th> <!-- colunas do cabeçalho -->
                    <th>Services</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                {% for instructor in instructors %}
                    <tr>
                        <td>
                            <span style="background-image: url({{ instructor.avatar_url }})"></span>
                            {{ instructor.name }}
                        </td>
                        <td>{{ instructor.services }}</td>
                        <td><a href="/instructors/{{ instructor.id }}">SEE</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}