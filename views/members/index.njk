{% extends 'layout.njk' %}

{% block content %}

    <div class="card table-container">
        <a href="/members/create">NEW</a>

        <table>
            <thead>
                <tr> <!-- linhas do cabeçalho -->
                    <th>Member</th> <!-- colunas do cabeçalho -->
                    <th>Email</th>
                    <th>Height</th>
                    <th>Weight</th>
                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                {% for member in members %}
                    <tr>
                        <td>
                            <span style="background-image: url({{ member.avatar_url }})"></span>
                            {{ member.name }}
                        </td>
                        <td>{{ member.email }}</td>
                        <td>{{ member.height }}cm</td>
                        <td>{{ member.weight }}kg</td>
                        <td><a href="/members/{{ member.id }}">SEE</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}